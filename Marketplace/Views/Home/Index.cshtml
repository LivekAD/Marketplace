@{
    ViewData["Title"] = "Главная";
}

<div style="padding: 10px;"></div>
@if (User.Identity.IsAuthenticated)
{
    <div class="card col-md-12">
        <div class="card-body">
            <h5 class="card-title text-center">Ласкаво просимо на сайт Marketplace</h5>
            <p class="card-text">
                Сайт ще в розробці
            </p>
            <p class="card-text"><small class="text-muted">Livek</small></p>
        </div>
    </div>

    <div style="padding: 10px;"></div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @if (User.IsInRole("Admin"))
        {
            <div class="col">
                <div class="card h-100">
                    <img src="https://images.wallpaperscraft.ru/image/single/mashina_noch_dozhd_143166_1280x720.jpg" class="card-img-top card-image" />
                    <div class="card-body text-center">
                        <h5 class="card-title">Product 1</h5>
                        <p class="card-text">Product 11</p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-controller="Product" asp-action="GetProducts" class="card-link">Список оголошень</a>
                    </div>
                </div>
            </div>
        }
        <div class="col">
            <div class="card h-100">
                <img src="https://images.wallpaperscraft.ru/image/single/bmw_fary_avtomobil_124112_1280x720.jpg" class="card-img-top card-image" />
                <div class="card-body text-center">
                    <h5 class="card-title">Product 2</h5>
                    <p class="card-text">
                        Product 22
                    </p>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Product" asp-action="GetProducts" class="card-link">Список машин</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <img src="https://images.wallpaperscraft.ru/image/single/audi_avtomobil_vid_speredi_130942_1280x720.jpg" class="card-img-top card-image" />
                <div class="card-body text-center">
                    <h5 class="card-title">Product 3</h5>
                    <p class="card-text">Product 33</p>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Product" asp-action="GetProducts" class="card-link">Список машин</a>
                </div>
            </div>
        </div>
    </div>

    <div style="padding: 10px;"></div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Text</h5>
            <p class="card-text">
                More text
            </p>
            <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a>
        </div>
    </div>

    <div style="padding: 10px;"></div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Text title</h5>
        </div>
        <ul class="list-group list-group-flush" id="ulListId">
            <li class="list-group-item">1</li>
            <li class="list-group-item">2</li>
            <li class="list-group-item">3</li>
            <li class="list-group-item">4</li>
            <li class="list-group-item">5</li>
            <li class="list-group-item">6</li>
            <li class="list-group-item">7</li>
            <li class="list-group-item">8</li>
        </ul>
        <div class="card-body">
            <button class="btn btn-danger" id="btnHideId">Сховати</button>
            <button class="btn btn-primary" id="btnShowId">Показати</button>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            Ви не авторизовані
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>Для перегляду контенту ви повинні авторизуватися</p>
            </blockquote>
        </div>
    </div>

    <div style="padding: 10px;"></div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <div class="card h-100">
                <img src="~/img/Bmw_I8.jpg" class="card-img-top" alt="Photo">
                <div class="card-body">
                    <h5 class="card-title text-center">Недоступно</h5>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Text</small>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <img src="~/img/Mustang.jpg" class="card-img-top" alt="photo">
                <div class="card-body">
                    <h5 class="card-title text-center">Недоступно</h5>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Text</small>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <img src="~/img/Bmw.jpg" class="card-img-top" alt="photo">
                <div class="card-body">
                    <h5 class="card-title text-center">Недоступно</h5>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Text</small>
                </div>
            </div>
        </div>
    </div>
}

@section pageScripts
    {
    <script>

        $('#btnHideId').click(function () {
            $('#ulListId').hide(2000);
        });

        $('#btnShowId').click(function () {
            $('#ulListId').show(2000);
        });
    </script>
}
