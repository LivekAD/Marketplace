@model Marketplace.Domain.ViewModels.Account.LoginViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Вход в аккаунт";
}


<section class="page__login login-block">
    <div class="login-block__container">
        <div class="login-block__content">
            <form autocomplete="on" method="post" class="login-block__login" asp-controller="Account" asp-action="Login">
                <div class="login__head">
                    <h2>Вхід</h2>
                </div>
                <input type="text" class="login__login" placeholder="Логін" asp-for="Name">
                <input type="password" class="login__password" placeholder="Пароль" autocomplete="new-password" asp-for="Password"><br>
                <button type="submit" class="button">Увійти</button>
            </form>
        </div>
    </div>
</section>