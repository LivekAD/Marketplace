@using Marketplace.Domain.Enum;
@model ProductViewModel
@{
    Layout = "_Layout";
}

<form asp-action="SaveAuction" enctype="multipart/form-data" id="formSaveProduct">
    <input asp-for="Id" hidden />
    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact, serif" class="text-danger text-center"></div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="@Model.Name" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Name">
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Price" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Price" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-12">
            <label asp-for="@Model.Description" class="col-form-label"></label>
            <textarea type="text" class="form-control" asp-for="@Model.Description"></textarea>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Category" class="control-label"></label>
            <select asp-for="@Model.Category" class="form-control" asp-items="Html.GetEnumSelectList<Category>()">
                <option value="">Please choose your product</option>
            </select>
            <span asp-validation-for="@Model.Category" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.SubCategory" class="control-label"></label>
            <select asp-for="@Model.SubCategory" class="form-control" asp-items="Html.GetEnumSelectList<SubCategory>()">
                <option value="">Please choose your product</option>
            </select>
            <span asp-validation-for="@Model.SubCategory" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label class="col-form-label">Изображение</label>
            <input asp-for="@Model.Photo" class="form-control" type="file">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.EndingAuction" class="control-label"></label>
            <input type="datetime-local" asp-for="@Model.EndingAuction" />
        </div>
    </div>
    <button class="btn btn-primary">Отправить</button>
</form>

<style>
    label {
        color: black;
    }
</style>