@model ProductViewModel

@{
    ViewBag.Title = "Повідомлення";
    Layout = "_Layout";
}

<section class="page__chatmessage chatmessage-block">
	<div class="chatmessage-block__container">
		<div class="chatmessage-block__content">
			<div class="chatmessage-block__chatwindow chatwindow">
				<div class="chatwindow__top"><span>To: <span class="name">Dog Woofson</span></span></div>
				<div class="chatwindow__chat">
					<div class="chat" id="messages" data-chat="@Model.ChatMessages[0].GroupName">
						@foreach (var chat in Model.ChatMessages)
						{
							@if (User.Identity.Name == chat.User1Name)
							{
																
								<div class="bubble me">
									@chat.Message
								</div>								

							}
							else
							{

								<div class="bubble you">
									@chat.Message
								</div>
								
							}
						}
					</div>
				</div>
				<div class="chatwindow__sender">
					<a href="javascript:;" class="write-link attach"></a>
					<input type="text" id="message-input" name="message" />
					<a href="javascript:;" class="write-link smiley"></a>
					<a class="write-link send" id="sendButton">
						<svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M18.0693 8.50867L9.50929 4.22867C3.75929 1.34867 1.39929 3.70867 4.27929 9.45867L5.14929 11.1987C5.39929 11.7087 5.39929 12.2987 5.14929 12.8087L4.27929 14.5387C1.39929 20.2887 3.74929 22.6487 9.50929 19.7687L18.0693 15.4887C21.9093 13.5687 21.9093 10.4287 18.0693 8.50867ZM14.8393 12.7487H9.43929C9.02929 12.7487 8.68929 12.4087 8.68929 11.9987C8.68929 11.5887 9.02929 11.2487 9.43929 11.2487H14.8393C15.2493 11.2487 15.5893 11.5887 15.5893 11.9987C15.5893 12.4087 15.2493 12.7487 14.8393 12.7487Z" fill="#292D32" />
						</svg>
					</a>
				</div>
			</div>
		</div>
	</div>
</section>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/clientHub.js"></script>


@section pageScripts {
	<script>
		var productId = "@Model.Id", groupName = "@Model.ChatMessages[0].GroupName", userNameSender = "@User.Identity.Name", owner = "@Model.OwnerName";
	</script>
}